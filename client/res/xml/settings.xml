<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/network_settings" >
        <EditTextPreference
            android:dialogTitle="@string/wifi_ssid_dialog_title"
            android:key="edittext_wifi_ssid"
            android:summary="@string/wifi_ssid_summary"
            android:title="@string/wifi_ssid" />
        <EditTextPreference
            android:dialogTitle="@string/wifi_pwd_dialog_title"
            android:key="edittext_wifi _pwd"
            android:title="@string/wifi_pwd"
            android:password="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/server_settings" >
        <EditTextPreference
            android:dialogTitle="@string/server_host_dialog_title"
            android:key="edittext_server_host"
            android:summary="@string/server_host_summary"
            android:title="@string/server_host" />
        <EditTextPreference
            android:dialogTitle="@string/server_port_dialog_title"
            android:key="edittext_server_port"
            android:numeric="integer"
            android:summary="@string/server_port_summary"
            android:title="@string/server_port" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/ble_settings" >
        <EditTextPreference
            android:dialogTitle="@string/ble_mac_dialog_title"
            android:key="edittext_ble_mac"
            android:numeric="integer"
            android:summary="@string/ble_mac_summary"
            android:title="@string/ble_mac" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about" >
        <Preference
            android:key="prdference_version"
            android:title="@string/version" />
    </PreferenceCategory>

</PreferenceScreen>